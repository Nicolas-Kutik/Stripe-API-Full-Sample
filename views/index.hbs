<div class="container mt-5">
  <div class="text-center mb-4">
    <h1>{{title}}</h1>
    <p class="lead">Welcome to {{title}}! Explore our demo products and try out Stripe Checkout.</p>
  </div>
  <div class="row justify-content-center">
    <div class="col-md-4 mb-4">
      <div class="card shadow-sm">
        <img src="/images/stock-shirt.jpg" class="card-img-top" alt="Demo Product 1">
        <div class="card-body">
          <h5 class="card-title">T-Shirt</h5>
          <p class="card-text">High quality cotton t-shirt. Perfect for testing Stripe payments.</p>
          <p class="fw-bold">$19.99</p>
          <button class="btn btn-primary checkout-btn" data-item="tshirt"><i class="fa-solid fa-cart-shopping"></i> Buy Now</button>
        </div>
      </div>
    </div>
    <div class="col-md-4 mb-4">
      <div class="card shadow-sm">
        <img src="/images/stock-mug.jpg" class="card-img-top" alt="Demo Product 2">
        <div class="card-body">
          <h5 class="card-title">Mug</h5>
          <p class="card-text">Ceramic mug for your favorite beverage. Try Stripe checkout with this item!</p>
          <p class="fw-bold">$9.99</p>
          <button class="btn btn-primary checkout-btn" data-item="mug"><i class="fa-solid fa-cart-shopping"></i> Buy Now</button>
        </div>
      </div>
    </div>
    <div class="col-md-4 mb-4">
      <div class="card shadow-sm">
        <img src="/images/stock-sticker.jpg" class="card-img-top" alt="Demo Product 3">
        <div class="card-body">
          <h5 class="card-title">Sticker Pack</h5>
          <p class="card-text">Fun stickers for your laptop or notebook. Great for Stripe payment testing.</p>
          <p class="fw-bold">$4.99</p>
          <button class="btn btn-primary checkout-btn" data-item="stickers"><i class="fa-solid fa-cart-shopping"></i> Buy Now</button>
        </div>
      </div>
    </div>
  </div>
</div>
 <script>
  document.querySelectorAll('.checkout-btn').forEach(button => {
    button.addEventListener('click', () => {
      const item = button.getAttribute('data-item');
      window.location.href = `/create-checkout-session?item=${item}`;
    });
  });
</script>
