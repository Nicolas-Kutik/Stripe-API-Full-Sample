<div class="container mt-5">
  <div class="text-center mb-4">
    <h1>{{title}}</h1>
    <p class="lead">Welcome to {{title}}! Explore our demo products and try out Stripe Checkout.</p>
  </div>
  <div class="row justify-content-center">
    <div class="col-md-4 mb-4">
      <div class="card shadow-sm">
        <img src="https://images.unsplash.com/photo-1519125323398-675f0ddb6308?auto=format&fit=crop&w=400&q=80" class="card-img-top" alt="Demo Product 1">
        <div class="card-body">
          <h5 class="card-title">Demo T-Shirt</h5>
          <p class="card-text">High quality cotton t-shirt. Perfect for testing Stripe payments.</p>
          <p class="fw-bold">$19.99</p>
          <button class="btn btn-primary checkout-btn" data-item="tshirt"><i class="fa-solid fa-cart-shopping"></i> Buy Now</button>
        </div>
      </div>
    </div>
    <div class="col-md-4 mb-4">
      <div class="card shadow-sm">
        <img src="https://images.unsplash.com/photo-1465101046530-73398c7f28ca?auto=format&fit=crop&w=400&q=80" class="card-img-top" alt="Demo Product 2">
        <div class="card-body">
          <h5 class="card-title">Demo Mug</h5>
          <p class="card-text">Ceramic mug for your favorite beverage. Try Stripe checkout with this item!</p>
          <p class="fw-bold">$9.99</p>
          <button class="btn btn-primary checkout-btn" data-item="mug"><i class="fa-solid fa-cart-shopping"></i> Buy Now</button>
        </div>
      </div>
    </div>
    <div class="col-md-4 mb-4">
      <div class="card shadow-sm">
        <img src="https://images.unsplash.com/photo-1506744038136-46273834b3fb?auto=format&fit=crop&w=400&q=80" class="card-img-top" alt="Demo Product 3">
        <div class="card-body">
          <h5 class="card-title">Demo Sticker Pack</h5>
          <p class="card-text">Fun stickers for your laptop or notebook. Great for Stripe payment testing.</p>
          <p class="fw-bold">$4.99</p>
          <button class="btn btn-primary checkout-btn" data-item="stickers"><i class="fa-solid fa-cart-shopping"></i> Buy Now</button>
        </div>
      </div>
    </div>
  </div>
</div>
<script>
  document.querySelectorAll('.checkout-btn').forEach(btn => {
    btn.addEventListener('click', function() {
      fetch('/checkout', {
        method: 'POST',
      })
      .then(res => res.json())
      .then(data => {
        window.location.href = data.url;
      });
    });
  });
</script>
