<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Cart</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />
</head>
<body>
  <div class="container mt-5">
    <h1 class="mb-4 text-center">Your Cart</h1>
    <div id="cart-items"></div>
    <div class="text-center mt-4">
      <button id="checkout-btn" class="btn btn-primary btn-lg" disabled>
        <i class="fa-solid fa-credit-card"></i> Checkout
      </button>
    </div>
  </div>
  <script>
    const products = {
      tshirt: { name: 'T-Shirt', price: 19.99, image: '../public/images/stock-shirt.jpg' },
      mug: { name: 'Mug', price: 9.99, image: '../public/images/stock-mug.jpg' },
      stickers: { name: 'Sticker Pack', price: 4.99, image: '../public/images/stock-sticker.jpg' },
      notebook: { name: 'Notebook', price: 7.99, image: '../public/images/stock-notebook.jpg' },
      pen: { name: 'Pen', price: 2.99, image: '../public/images/stock-pen.jpg' },' },
      cap: { name: 'Baseball Cap', price: 14.99, image: '../public/images/stock-hat.jpg' },
      bottle: { name: 'Water Bottle', price: 12.99, image: '../public/images/stock-bottle.jpg' },
      bag: { name: 'Tote Bag', price: 8.99, image: '../public/images/stock-bag.jpg' },
      hoodie: { name: 'Hoodie', price: 29.99, image: '../public/images/stock-hoodie.jpg' },
      mousepad: { name: 'Mouse Pad', price: 5.99, image: '../public/images/stock-mousepad.jpg' }
    };

    function renderCart() {
      const cart = JSON.parse(localStorage.getItem('cart') || '{}');
      const cartItemsDiv = document.getElementById('cart-items');
      cartItemsDiv.innerHTML = '';
      let total = 0;
      let hasItems = false;

      if (Object.keys(cart).length === 0) {
        cartItemsDiv.innerHTML = '<p class="text-center">Your cart is empty.</p>';
        document.getElementById('checkout-btn').disabled = true;
        return;
      }

      const table = document.createElement('table');
      table.className = 'table align-middle';
      table.innerHTML = `
        <thead>
          <tr>
            <th></th>
            <th>Product</th>
            <th>Price</th>
            <th style="width: 140px;">Quantity</th>
            <th>Total</th>
            <th></th>
          </tr>
        </thead>
        <tbody></tbody>
      `;

      for (const key in cart) {
        if (!products[key]) continue;
        hasItems = true;
        const item = products[key];
        const qty = cart[key];
        const itemTotal = (item.price * qty);
        total += itemTotal;

        const row = document.createElement('tr');
        row.innerHTML = `
          <td><img src="${item.image}" alt="${item.name}" style="width:48px;height:48px;object-fit:cover;border-radius:6px;"></td>
          <td>${item.name}</td>
          <td>$${item.price.toFixed(2)}</td>
          <td>
            <div class="input-group input-group-sm">
              <button class="btn btn-outline-secondary qty-btn" data-action="decrease" data-item="${key}"><i class="fa fa-minus"></i></button>
              <input type="text" class="form-control text-center" value="${qty}" style="max-width:40px;" readonly>
              <button class="btn btn-outline-secondary qty-btn" data-action="increase" data-item="${key}"><i class="fa fa-plus"></i></button>
            </div>
          </td>
          <td>$${itemTotal.toFixed(2)}</td>
          <td>
            <button class="btn btn-danger btn-sm delete-btn" data-item="${key}"><i class="fa fa-trash"></i></button>
          </td>
        `;
        table.querySelector('tbody').appendChild(row);
      }

      if (hasItems) {
        const tfoot = document.createElement('tfoot');
        tfoot.innerHTML = `
          <tr>
            <td colspan="4" class="text-end fw-bold">Total:</td>
            <td class="fw-bold">$${total.toFixed(2)}</td>
            <td></td>
          </tr>
        `;
        table.appendChild(tfoot);
        document.getElementById('checkout-btn').disabled = false;
      } else {
        document.getElementById('checkout-btn').disabled = true;
      }

      cartItemsDiv.appendChild(table);

      // Add event listeners for quantity and delete
      document.querySelectorAll('.qty-btn').forEach(btn => {
        btn.addEventListener('click', function() {
          const item = this.getAttribute('data-item');
          const action = this.getAttribute('data-action');
          let cart = JSON.parse(localStorage.getItem('cart') || '{}');
          if (action === 'increase') {
            cart[item] = (cart[item] || 0) + 1;
          } else if (action === 'decrease') {
            cart[item] = Math.max(1, (cart[item] || 1) - 1);
          }
          localStorage.setItem('cart', JSON.stringify(cart));
          renderCart();
        });
      });

      document.querySelectorAll('.delete-btn').forEach(btn => {
        btn.addEventListener('click', function() {
          const item = this.getAttribute('data-item');
          let cart = JSON.parse(localStorage.getItem('cart') || '{}');
          delete cart[item];
          localStorage.setItem('cart', JSON.stringify(cart));
          renderCart();
        });
      });
    }

    renderCart();

    document.getElementById('checkout-btn').addEventListener('click', function() {
      const cart = JSON.parse(localStorage.getItem('cart') || '{}');
      fetch('/create-checkout-session', {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify({ cart })
      })
      .then(res => res.json())
      .then(data => {
        if (data.url) {
          window.location.href = data.url;
        } else {
          alert('Checkout failed.');
        }
      });
    });
  </script>
</body>
</html>